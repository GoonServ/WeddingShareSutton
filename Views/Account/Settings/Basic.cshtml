    <div class="row mb-4 mb-lg-4">
        <div class="col-12">
            <label>@_localizer["Settings_Basic_LinksOpenNewTab_Label"].Value</label>
            <select class="setting-field form-control" data-setting-name="@Settings.Basic.LinksOpenNewTab">
