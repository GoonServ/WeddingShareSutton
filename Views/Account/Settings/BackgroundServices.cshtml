@model IDictionary<string, string>?
@using WeddingShare.Constants

@if (Model != null && Model.Any())
{
    <div class="row mb-4 mb-lg-4">
        <div class="col-12">
            <label>@_localizer["Settings_BackgroundServices_DirectoryScanner_Label"].Value</label>
            <input class="setting-field form-control" data-setting-name="@BackgroundServices.DirectoryScanner.Schedule" placeholder="*/30 * * * *" value="@Model.GetValue(BackgroundServices.DirectoryScanner.Schedule.ToUpper(), "*/30 * * * *")" type="text" />
            <div class="form-text">@_localizer["Settings_BackgroundServices_DirectoryScanner_Help"].Value</div>
        </div>
    </div>

    <div class="row mb-4 mb-lg-4">
        <div class="col-12">
            <label>@_localizer["Settings_BackgroundServices_EmailReport_Label"].Value</label>
            <input class="setting-field form-control" data-setting-name="@BackgroundServices.EmailReport.Schedule" placeholder="0 0 * * *" value="@Model.GetValue(BackgroundServices.EmailReport.Schedule.ToUpper(), "0 0 * * *")" type="text" />
            <div class="form-text">@_localizer["Settings_BackgroundServices_EmailReport_Help"].Value</div>
        </div>
    </div>

    <div class="row mb-4 mb-lg-4">
        <div class="col-12">
            <label>@_localizer["Settings_BackgroundServices_Cleanup_Label"].Value</label>
            <input class="setting-field form-control" data-setting-name="@BackgroundServices.Cleanup.Schedule" placeholder="0 4 * * *" value="@Model.GetValue(BackgroundServices.Cleanup.Schedule.ToUpper(), "0 4 * * *")" type="text" />
            <div class="form-text">@_localizer["Settings_BackgroundServices_Cleanup_Help"].Value</div>
        </div>
    </div>
}